<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primary">#2196f3</color>
    <color name="primary_variant">#005cbc</color>
    <color name="text_on_primary">#ffffff</color>
    <color name="start">#4caf50</color>

    <dimen name="button_margin_h">-1.5dp</dimen>
    <dimen name="button_margin_v">-3.5dp</dimen>
    <dimen name="button_margin_out">2.5dp</dimen>
    <dimen name="text_size">28sp</dimen>

    <style name="PadButton">
        <item name="android:layout_marginStart">@dimen/button_margin_h</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_h</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_v</item>
        <item name="android:layout_marginTop">@dimen/button_margin_v</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="NumberButton" parent="PadButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>
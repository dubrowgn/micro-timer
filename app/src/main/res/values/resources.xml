<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primary">#2196f3</color>
    <color name="primary_variant">#005cbc</color>
    <color name="text_on_primary">#ffffff</color>
    <color name="action">#4caf50</color>
    <color name="delete">#e91e1e</color>

    <dimen name="button_margin">2.5dp</dimen>
    <dimen name="icon_button_size">48dp</dimen>
    <dimen name="text_size">28sp</dimen>

    <style name="Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="PadButton" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="NumberButton" parent="PadButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>